<div class="container">
  <h1>ユーザー編集</h1>

  <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
    <div class="row">
      <%= f.label "名前" %><br>
      <%= f.text_field :name ,class: "form-control" %>
    </div>
    <div class="row">
      <%= f.label "画像" %>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
    <div class="row">
      <%= f.label "自己紹介" %><br>
      <%= f.text_area :introduction ,class: "form-control" %>
    </div>
    <div class="row">
      <%= f.submit "編集", class: "btn btn-success" %>
    </div>
  <% end %>
</div>