<h1><%= @user.name %></h1>

<% if current_user == @user %>
  <%= link_to "編集" , edit_user_path(@user), class: "btn btn-success" %>
  <%= link_to "お気に入り" , note_favorite_path(@user) %>
<% end %>

<%= image_tag @user.get_profile_image(500,500) %>
<%= @user.introduction %>
<%= link_to user_followings_path(@user) do %>
  フォロー数:<%= @user.followings.count %>
<% end %>
<%= link_to user_followers_path(@user) do %>
  フォロワー数:<%= @user.followers.count %>
 <% end %>
カテゴリー

<% if @user != current_user %>
  <% if current_user.followings?(@user) %>
    <%= link_to "フォローを外す" , user_relationships_path(@user) , method: :delete %>
  <% else %>
    <%= link_to "フォローする" , user_relationships_path(@user) , method: :post %>
  <% end %>
<% end %>
